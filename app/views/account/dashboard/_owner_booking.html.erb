<div class="row">
  <div class="col-xs-12 col-md-3 text-left">
    <div class="booking-title">
      <%= link_to bed_path(booking.bed) do %>
        <h3><%= booking.bed.name.capitalize %></h3>
      <% end %>
      <p><%= booking.starting_on %> - <%= booking.ending_on %></p>
    </div>
  </div>
  <div class="col-xs-12 col-md-1 text-left">
    <div class="booking-status">
      <p><%= booking.total_price %>â‚¬</p>
      <p><strong><%= booking.status_text %></strong></p>
    </div>
  </div>
  <div class="col-xs-12 col-md-3 text-left">
    <div class="booking-status">
      <p><strong>Contact :</strong></p>
      <p><%= booking.client.email %></p>
    </div>
  </div>
  <div class="col-xs-12 col-md-3 text-center">
    <div class="booking-status">
      <%= link_to profile_path(booking.client) do %>
        <%= image_tag user_pict(booking.client), class: "avatar avatar-large avatar-bordered" %>
      <% end %>
    </div>
  </div>
  <div class="col-xs-12 col-md-2 text-center">
    <% if policy(booking).accept? %>
    <div>
      <%= link_to new_account_booking_accept_path(booking), class: "btn btn-success btn-block btn-booking" do %>
      <h5>Confirmer</h5>
      <% end %>
    </div>
    <% end %>
    <% if policy(booking).reject? %>
    <div>
      <%= link_to account_booking_reject_path(booking), class: "btn btn-danger btn-block btn-booking", method: :post do %>
      <h5>Annuler</h5>
      <% end %>
    </div>
    <% end %>
    <% if policy(booking).owner_archive? %>
      <div>
        <%= link_to account_booking_owner_archive_path(booking), class: "btn btn-info btn-block btn-booking", method: :post do %>
          <h5>Archiver</h5>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <hr>
  </div>
</div>

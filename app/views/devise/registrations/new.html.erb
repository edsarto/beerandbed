<% if user_signed_in? %>
  <div class="container padded">
    <div class="row">
      <div class="col-xs-12 map-card">
        <div class="col-xs-12 col-sm-6 col-sm-offset-3 text-center">
          <h2>S'inscrire</h2>
        </div>
        <div class="col-xs-12 col-sm-6 col-sm-offset-3 padding-top">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :first_name, required: true, autofocus: :true %>
            <%= f.input :last_name, required: true %>
            <%= f.input :email, required: true %>
            <%= f.input :password, required: true, hint: ("#{@minimum_password_length} charactÃ¨res minimum" if @  minimum_password_length) %>
            <%= f.input :password_confirmation, required: true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "S'inscrire", class: 'btn btn-primary' %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<script type="text/javascript">
  mixpanel.track("Page Loaded", {"Page Name": "Registration"});
</script>

<div class="container padded">
  <div class="map-card padded">
    <div>
      <div class="row padded">
        <div class="col-xs-12 col-md-4 col-md-offset-1">
          <%= image_tag user_pict(@user), class: "profile-pict"%>
        </div>
        <div class="col-xs-12 col-md-6">
          <h1><%= @user.first_name %> <%= @user.last_name %></h1>
          <p class="padding-top">A propos de <%= @user.first_name %> :</p>
          <p><%= @user.bio %></p>
        </div>
      </div>
    <div class="row">
          <div class="col-xs-12 col-md-4 col-md-offset-1 text-left">
        <h3>Documents</h3>
      </div>
    </div>
      <div class="row padded flex-center">
        <div class="col-xs-12 col-md-3 text-left">
          <%= image_tag insurance_pict(@user), class: "other-pict" %>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
    mixpanel.track("Page Loaded", {"Page Name": "Profile Show"});
</script>
